#include <stdio.h>
#include <string.h>
#define N 30
#define PROJECT 6
typedef struct student
{
    long number;
    char name[10];
    int score[PROJECT];
}STUDENT;
void Scanfscore(STUDENT stu[],int n,int project);/*录入每个学生的学号、姓名和各科考试成绩*/
void Sumandaverofproject(STUDENT stu[],float sum1[],float aver1[],int n,int project);/*计算每门课程的总分和平均分*/
void Sumandaverofstudent1(STUDENT stu[],float sum2[],float aver2[],int n,int project);/*计算每个学生的总分和平均分*/
void Sumandaverofstudent2(STUDENT stu[],float sum2[],float aver2[],int n,int project);/*输出每个学生的总分和平均分*/
void Scorefromhightolow(STUDENT stu[],float sum2[],float aver2[],int n,int project);/*按每个学生的总分由高到低排出名次表*/
void Scorefromlowtohigh(STUDENT stu[],float sum2[],float aver2[],int n,int project);/*按每个学生的总分由低到高排出名次表*/
void Numberfromsmalltobig(STUDENT stu[],int n,int project);/*按学号由小到大排出成绩表*/
void Namebydictionary(STUDENT stu[],int n,int project);/*按姓名的字典顺序排出成绩表*/
void Searchbynumber(STUDENT stu[],float sum2[],float aver2[],int n,int project);/*按学号查询学生排名及其考试成绩*/
void Searchbyname(STUDENT stu[],float sum2[],float aver2[],int n,int project);/*按姓名查询学生排名及其考试成绩*/
void Differentcategory(STUDENT stu[],int n,int project);/*统计不同类别的人数以及所占的百分比*/
void Printfscore(STUDENT stu[],float sum2[],float aver2[],int n,int project);/*输出每个学生的学号，姓名，各科考试成绩，总分和平均分*/
void Swap(float *x,float *y);/*两单精度实型数据互换*/
void Swap1(STUDENT stu[],int x,int y);/*二维数组两行互换*/

int main(void)
{
    STUDENT stu[N];
    int n,project,choice;
    float sum1[N],aver1[N],sum2[N],aver2[N];
    printf("Number:200210101\n");
    printf("Subject No.8\n");
    do
    {
        printf("Input n and project:(n<=30&project<=6)");
        scanf("%d,%d",&n,&project);
    }while(n>N||project>PROJECT);
    printf("Input record:(number\tname\tscore)\n");
    Scanfscore(stu,n,project);
    printf("1.Calculate total and average score of every course\n");
    printf("2.Calculate total and average score of every student\n");
    printf("3.Sort in descending order by total score of every student\n");
    printf("4.Sort in ascending order by total score of every student\n");
    printf("5.Sort in ascending order by number\n");
    printf("6.Sort in dictionary order by name\n");
    printf("7.Search by number\n");
    printf("8.Search by name\n");
    printf("9.Statistic analysis for every course\n");
    printf("10.List record\n");
    printf("0.Exit\n");
    do
    {
        printf("Please enter your choice:");
        getchar();
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:Sumandaverofproject(stu,sum1,aver1,n,project);
                   break;
            case 2:Sumandaverofstudent2(stu,sum2,aver2,n,project);
                   break;
            case 3:Scorefromhightolow(stu,sum2,aver2,n,project);
                   break;
            case 4:Scorefromlowtohigh(stu,sum2,aver2,n,project);
                   break;
            case 5:Numberfromsmalltobig(stu,n,project);
                   break;
            case 6:Namebydictionary(stu,n,project);
                   break;
            case 7:Searchbynumber(stu,sum2,aver2,n,project);
                   break;
            case 8:Searchbyname(stu,sum2,aver2,n,project);
                   break;
            case 9:Differentcategory(stu,n,project);
                   break;
            case 10:Printfscore(stu,sum2,aver2,n,project);
                   break;
            case 0:return 0;
            default:printf("Input data error!\n");
                    break;
        }
    }while("choice<0||choice>10");
}
/*******************
**函数名：录入每个学生的学号、姓名和各科考试成绩
**输出：STUDENT stu[],n,project;
**STUDENT stu[]:输入的各位学生的信息
**n:输入的学生人数
**project:输入的课程数
**作者：王梦涵
**日期；2020年11月07日
********************/
void Scanfscore(STUDENT stu[],int n,int project)
{
    int i,j,k;
    for(i=0;i<n;i++)
    {
        scanf("%ld\t%s",&stu[i].number,stu[i].name);
        for(j=0;j<project;j++)
        {
            scanf("%d",&stu[i].score[j]);
        }
        for(k=0;k<project;k++)
        {
            if(stu[i].score[k]<0||stu[i].score[k]>100)
            {
                printf("The scores are wrong!Please input this student's datas again.\n");
                i--;
                break;
            }
        }
        if(stu[i].number<0)
        {
            printf("The number is wrong!Please input this student's datas again.\n");
            i--;
        }
    }
}
/*******************
**函数名：计算每门课程的总分和平均分
**输入：STUDENT stu[],sum1[],aver1[],n,project;
**STUDENT stu[]:输入的各位学生的信息
**n:输入的学生人数
**project:输入的课程数
**输出；sum1[],aver1[];
sum1[]:每门课程的总分
aver1[]：每门课程的平均分
**作者：王梦涵
**日期；2020年11月07日
********************/
void Sumandaverofproject(STUDENT stu[],float sum1[],float aver1[],int n,int project)
{
    int i,j,k;
    for(j=0;j<project;j++)
    {
        sum1[j]=0;
        for(i=0;i<n;i++)
        {
            sum1[j]=sum1[j]+stu[i].score[j];
        }
        aver1[j]=sum1[j]/n;
    }
    printf("Calculate total and average score of course:\n");
    for(k=0;k<n;k++)
    {
        printf("第%d门课程，总分为%.1f，平均分为%.2f\n",(k+1),sum1[k],aver1[k]);
    }
}
/*******************
**函数名：计算每个学生的总分和平均分
**输入：STUDENT stu[],sum2[],aver2[],n,project;
**STUDENT stu[]:输入的各位学生的信息
**n:输入的学生人数
**project:输入的课程数
**输出；sum2[],aver2[];
sum2[]:每个学生的总分
aver2[]：每个学生的平均分
**作者：王梦涵
**日期；2020年11月07日
********************/
void Sumandaverofstudent1(STUDENT stu[],float sum2[],float aver2[],int n,int project)
{
    int i,j;
    for(i=0;i<project;i++)
    {
        sum2[i]=0;
        for(j=0;j<n;j++)
        {
            sum2[i]=sum2[i]+stu[i].score[j];
        }
        aver2[i]=sum2[i]/n;
    }
}
/*******************
**函数名：输出每个学生的总分和平均分
**输入：STUDENT stu[],sum2[],aver2[],n,project;
**STUDENT stu[]:输入的各位学生的信息
**n:输入的学生人数
**project:输入的课程数
**输出；sum2[],aver2[];
sum2[]:每个学生的总分
aver2[]：每个学生的平均分
**作者：王梦涵
**日期；2020年11月07日
********************/
void Sumandaverofstudent2(STUDENT stu[],float sum2[],float aver2[],int n,int project)
{
    Sumandaverofstudent1(stu,sum2,aver2,n,project);
    int k;
    printf("Calculate total and average score of course:\n");
    for(k=0;k<n;k++)
    {
        printf("学号为%ld的%s总分为%.1f，平均分为%.2f\n",stu[k].number,stu[k].name,sum2[k],aver2[k]);
    }
}
/*******************
**函数名：按每个学生的总分由高到低排出名次表
**输入：STUDENT stu[],sum2[],aver2[],n,project;
**STUDENT stu[]:输入的各位学生的信息
**sum2[]:各个学生的总分
**aver2[]:各个学生的平均分
**n:输入的学生人数
**project:输入的课程数
**输出：按总分由高到低排出的名次表
**作者：王梦涵
**日期；2020年11月07日
********************/
void Scorefromhightolow(STUDENT stu[],float sum2[],float aver2[],int n,int project)
{
    Sumandaverofstudent1(stu,sum2,aver2,n,project);
    int i,j,k,l,m;
    for(i=0;i<=n-2;i++)
    {
        k=i;
        for(j=i+1;j<=n-1;j++)
        {
            if(sum2[k]<sum2[j])
            {
                k=j;
            }
        }
        if(k!=i)
        {
            Swap(&sum2[i],&sum2[k]);
            Swap(&aver2[i],&aver2[k]);
            Swap1(stu,i,k);
        }
    }
    printf("Sort in descending order by score:\n");
   for(m=0;m<n;m++)
    {
        printf("No.%d\t%ld\t %s",m+1,stu[m].number,stu[m].name);
        for(l=0;l<project;l++)
        {
            printf("\t%d",stu[m].score[l]);
        }
        printf("\t%.1f\t%.2f\n",sum2[m],aver2[m]);
    }
}
/*******************
**函数名：按每个学生的总分由低到高排出名次表
**输入：STUDENT stu[],sum2[],aver2[],n,project;
**STUDENT stu[]:输入的各位学生的信息
**sum2[]:各个学生的总分
**aver2[]:各个学生的平均分
**n:输入的学生人数
**project:输入的课程数
**输出：按总分由低到高排出的名次表
**作者：王梦涵
**日期；2020年11月07日
********************/
void Scorefromlowtohigh(STUDENT stu[],float sum2[],float aver2[],int n,int project)
{
    Sumandaverofstudent1(stu,sum2,aver2,n,project);
    int i,j,k,l,m;
    for(i=0;i<=n-2;i++)
    {
        k=i;
        for(j=i+1;j<=n-1;j++)
        {
            if(sum2[k]>sum2[j])
            {
                k=j;
            }
        }
        if(k!=i)
        {
            Swap(&sum2[i],&sum2[k]);
            Swap(&aver2[i],&aver2[k]);
            Swap1(stu,i,k);
        }
    }
    printf("Sort in descending order by score:\n");
   for(m=0;m<n;m++)
    {
        printf("No.%d\t%ld\t %s",m+1,stu[m].number,stu[m].name);
        for(l=0;l<project;l++)
        {
            printf("\t%d",stu[m].score[l]);
        }
        printf("\t%.1f\t%.2f\n",sum2[m],aver2[m]);
    }
}
/*******************
**函数名：按学号由小到大排出成绩表
**输入：STUDENT stu[],n,project
**STUDENT stu[]:输入的各位学生的信息
**n:输入的学生人数
**project:输入的课程数
输出：按学号由小到大排出的成绩表
**作者：王梦涵
**日期；2020年11月07日
********************/
void Numberfromsmalltobig(STUDENT stu[],int n,int project)
{
    int i,j,k,m,l;
    for(i=0;i<n-1;i++)
    {
        k=i;
        for(j=i+1;j<n;j++)
        {
            if(stu[k].number>stu[j].number)
            {
                k=j;
            }
        }
        if(k!=i)
        {
            Swap1(stu,i,k);
        }
    }
    printf("Sort in ascending order by number:\n");
    for(m=0;m<n;m++)
    {
        printf("%ld\t %s",stu[m].number,stu[m].name);
        for(l=0;l<project;l++)
        {
            printf("\t%d",stu[m].score[l]);
        }
        printf("\n");
    }
}
/*******************
**函数名：按姓名的字典顺序由小到大排出成绩表
**输入：STUDENT stu[],n,project;
**STUDENT stu[]:输入的各位学生的信息
**n:输入的学生人数
**project:输入的课程数
输出：按姓名的字典顺序由小到大排出的成绩表
**作者：王梦涵
**日期；2020年11月07日
********************/
void Namebydictionary(STUDENT stu[],int n,int project)
{
    int i,j,k,m,l;
    for(i=0;i<n-1;i++)
    {
        k=i;
        for(j=i+1;j<n;j++)
        {
            if(strcmp(stu[j].name,stu[i].name)<0)
            {
                k=j;
            }
        }
        if(k!=i)
        {
            Swap1(stu,i,k);
        }
    }
    printf("Sort in dictionary order by name:\n");
    for(m=0;m<n;m++)
    {
        printf("%ld\t %s",stu[m].number,stu[m].name);
        for(l=0;l<project;l++)
        {
            printf("\t%d",stu[m].score[l]);
        }
        printf("\n");
    }
}
/*******************
**函数名：按学号查询学生排名及其考试成绩
**输入：STUDENT stu[],sum2[],aver2[],n,project;
**STUDENT stu[]:输入的各位学生的信息
**n:输入的学生人数
**project:输入的课程数
**输出：stu.score,stu.number,stu.name,a;
**stu.score:要查找的学生的成绩
**stu.number:要查找的学生的学号
**stu.name:要查找的学生的姓名
**a：要查找的学生的排名
**作者：王梦涵
**日期；2020年11月07日
********************/
void Searchbynumber(STUDENT stu[],float sum2[],float aver2[],int n,int project)
{
    Sumandaverofstudent1(stu,sum2,aver2,n,project);
    int a,i,j,k,l;
    for(i=0;i<=n-2;i++)
    {
        k=i;
        for(j=i+1;j<=n-1;j++)
        {
            if(sum2[k]<sum2[j])
            {
                k=j;
            }
        }
        if(k!=i)
        {
            Swap(&sum2[i],&sum2[k]);
            Swap(&aver2[i],&aver2[k]);
            Swap1(stu,i,k);
        }
    }
    long z;/*z为要查找的学号*/
    printf("Search by number:\n");
    printf("Input z:");
    scanf("%ld",&z);
    for(a=0;a<n;a++)
    {
        if(z==stu[a].number)
        {
            printf("No.%d\t%ld\t %s",a+1,stu[a].number,stu[a].name);
            for(l=0;l<project;l++)
            {
                printf("\t%d",stu[a].score[l]);
            }
            printf("\t%.1f\t%.2f\n",sum2[a],aver2[a]);
            return 0;
        }
    }
    printf("Not found!\n");
}
/*******************
**函数名：按姓名查询学生排名及其考试成绩
**输入：STUDENT stu[],sum2[],aver2[],n,project
**STUDENT stu[]:输入的各位学生的信息
**sum2[]:各个学生的总分
**aver2[]:各个学生的平均分
**n:输入的学生人数
**project:输入的课程数
**输出：stu.score,stu.number,stu.name,a;
**stu.score:要查找的学生的成绩
**stu.number:要查找的学生的学号
**stu.name:要查找的学生的姓名
**a：要查找的学生的排名
**日期；2020年11月07日
********************/
void Searchbyname(STUDENT stu[],float sum2[],float aver2[],int n,int project)
{
    Sumandaverofstudent1(stu,sum2,aver2,n,project);
    int a,i,j,k,l;
    for(i=0;i<=n-2;i++)
    {
        k=i;
        for(j=i+1;j<=n-1;j++)
        {
            if(sum2[k]<sum2[j])
            {
                k=j;
            }
        }
        if(k!=i)
        {
            Swap(&sum2[i],&sum2[k]);
            Swap(&aver2[i],&aver2[k]);
            Swap1(stu,i,k);
        }
    }
    char z[20];/*x为要查找的姓名*/
    printf("Search by name:\n");
    printf("Input z:");
    scanf("%s",z);
    for(a=0;a<n;a++)
    {
        if(strcmp(z,stu[a].name)==0)
        {
            printf("No.%d\t%ld\t %s",a+1,stu[a].number,stu[a].name);
            for(l=0;l<project;l++)
            {
                printf("\t%d",stu[a].score[l]);
            }
            printf("\t%.1f\t%.2f\n",sum2[a],aver2[a]);
            return 0;
        }
    }
    printf("Not found!\n");
}
/*******************
**函数名：统计不同类别的人数以及所占的百分比
**输入：STUDENT stu[],n,project
**STUDENT stu[]:输入的各位学生的信息
**n:输入的学生人数
**project:输入的课程数
**输出：A[],B[],C[],D[],E[],a[],b[],c[],d[],e[];
**功能描述：按优秀（90-100分）、良好（80-89分）、中等（70-79分）、及格（60-69分）、
不及格（0-59分）5个类别，统计每门课程不同类别的人数以及所占的百分比
**作者：王梦涵
**日期；2020年11月07日
********************/
void Differentcategory(STUDENT stu[],int n,int project)
{
    int i,j,k;
    int A[N]={0};
    int B[N]={0};
    int C[N]={0};
    int D[N]={0};
    int E[N]={0};
    int a[N],b[N],c[N],d[N],e[N];
    for(j=0;j<project;j++)
    {
        for(i=0;i<n;i++)
        {
           if(stu[i].score[j]>=90&&stu[i].score[j]<=100) A[j]++;
           if(stu[i].score[j]>=80&&stu[i].score[j]<=89) B[j]++;
           if(stu[i].score[j]>=70&&stu[i].score[j]<=79) C[j]++;
           if(stu[i].score[j]>=60&&stu[i].score[j]<=69) D[j]++;
           if(stu[i].score[j]>=0&&stu[i].score[j]<=59) E[j]++;
        }
        a[j]=100*A[j]/n;
        b[j]=100*B[j]/n;
        c[j]=100*C[j]/n;
        d[j]=100*D[j]/n;
        e[j]=100*E[j]/n;
    }
    for(k=0;k<project;k++)
    {
        printf("第%d门课程,优秀有%d人，占比%d%%;良好有%d人，占比%d%%;中等有%d人，占比%d%%;\n及格有%d人，占比%d%%;不及格有%d人，占比%d%%\n",(k+1),A[k],a[k],B[k],b[k],C[k],c[k],D[k],d[k],E[k],e[k]);
    }
}
/*******************
**函数名：输出每个学生的学号，姓名，每科考试成绩以及总分和平均分
**输入：STUDENT stu[],sum2[],aver2[],n,project
**STUDENT stu[]:输入的各位学生的信息
**sum2[]:各个学生的总分
**aver2[]:各个学生的平均分
**n:输入的学生人数
**project:输入的课程数
**输出：STUDENT stu[],sum2[],aver2[]
**STUDENT stu[]：各个学生的信息
**sum2[]:各个学生的总分
**aver2[]:各个学生的平均分
**作者：王梦涵
**日期；2020年11月07日
********************/
void Printfscore(STUDENT stu[],float sum2[],float aver2[],int n,int project)
{
    Sumandaverofstudent1(stu,sum2,aver2,n,project);
    int l,m;
    for(m=0;m<n;m++)
    {
        printf("%ld\t %s",stu[m].number,stu[m].name);
        for(l=0;l<project;l++)
        {
            printf("\t%d",stu[m].score[l]);
        }
        printf("\t%.1f\t%.2f\n",sum2[m],aver2[m]);
    }
}
/*******************
**函数名：两单精度实型数据互换
**输入：*x,*y
** *x:要交换的数1
** *y:要交换的数2
**作者：王梦涵
**日期；2020年11月07日
********************/
void Swap(float *x,float *y)
{
    float temp;
    temp=*x;
    *x=*y;
    *y=temp;
}
/*******************
**函数名：结构体两行成员互换
**输入：STUDENT stu[]，x,y,project
** STUDENT stu[]:要交换的结构体
** x,y:要交换的两行
**project:输入的科目数
**作者：王梦涵
**日期；2020年11月07日
********************/
void Swap1(STUDENT stu[],int x,int y)
{
    STUDENT temp;
    temp=stu[x];
    stu[x]=stu[y];
    stu[y]=temp;
}
